@model List<Product>

<h1>Lista de Productos</h1>

@if (TempData["msg"] != null)
    {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["msg"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            @*<span aria-hidden="true">&times;</span>*@
        </button>
    </div>
    }

<p>
    <a asp-action="Create">Crear Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Peso(g)</th>
            <th>Categoria</th>
            <th>Stock</th>
            <th>FechaCreacion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>                
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Peso</td>
                <td>@producto.Categoria</td>
                <td>@producto.Stock</td>
                <td>@producto.FechaCreacion</td>
                <td><a asp-action="Edit"  asp-route-id="@producto.Id" class="btn btn-warning">Editar</a></td>
                <td><a asp-action="DeleteProduct" asp-route-id="@producto.Id" class="btn btn-danger">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>