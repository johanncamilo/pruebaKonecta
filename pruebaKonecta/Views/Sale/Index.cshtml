@model Sale

<h1>Modulo ventas</h1>

@if (TempData["msg"] != null)
    {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["msg"]
        @*<button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>*@
    </div>
    }

<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Productos"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

           <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input type="number" asp-for="Cantidad" class="form-control">                
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Hacer Venta" class="btn btn-primary">
            </div>

        </form>
    </div>    
</div>

<br />
<a asp-action="Historial">Historial de ventas aquí</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}